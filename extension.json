{
    "name": "AISEOMeta",
    "version": "1.0.0",
    "author": [
        "Haiyu Youyan (海屿有燕) <zorua@vip.qq.com>"
    ],
    "url": "https://www.mediawiki.org/wiki/Extension:AISEOMeta",
    "descriptionmsg": "aiseometa-desc",
    "license-name": "MIT",
    "type": "other",
    "requires": {
        "MediaWiki": ">= 1.43.0"
    },
    "AutoloadNamespaces": {
        "AISEOMeta\\": "src/"
    },
    "MessagesDirs": {
        "AISEOMeta": [
            "i18n"
        ]
    },
    "ExtensionMessagesFiles": {
        "AISEOMetaAlias": "AISEOMeta.alias.php"
    },
    "SpecialPages": {
        "AISEOMetaTest": "AISEOMeta\\SpecialAISEOMetaTest",
        "AISEOMetaQuery": "AISEOMeta\\SpecialAISEOMetaQuery",
        "AISEOMetaBatch": "AISEOMeta\\SpecialAISEOMetaBatch"
    },
    "AvailableRights": [
        "aiseometa-admin"
    ],
    "GroupPermissions": {
        "sysop": {
            "aiseometa-admin": true
        }
    },
    "Hooks": {
        "PageSaveComplete": "AISEOMeta\\Hooks::onPageSaveComplete",
        "ParserAfterParse": "AISEOMeta\\Hooks::onParserAfterParse",
        "OutputPageParserOutput": "AISEOMeta\\Hooks::onOutputPageParserOutput"
    },
    "JobClasses": {
        "AISEOMetaGenerateJob": "AISEOMeta\\Job\\GenerateMetaJob"
    },
    "config": {
        "ASMTargetNamespaces": {
            "value": [ 0 ],
            "description": "允许生成 SEO 标签的命名空间 ID 数组 (默认 0 为主命名空间)"
        },
        "ASMProvider": {
            "value": "openai",
            "description": "选择 AI 提供商: 'openai' 或 'gemini'"
        },
        "ASMOpenAIEndpoint": {
            "value": "https://api.openai.com/v1/chat/completions",
            "description": "OpenAI 兼容 API 的端点"
        },
        "ASMOpenAIKey": {
            "value": "",
            "description": "OpenAI API Key"
        },
        "ASMOpenAIModel": {
            "value": "gpt-3.5-turbo",
            "description": "OpenAI 模型名称"
        },
        "ASMOpenAIAdditionalParams": {
            "value": {
                "temperature": 0.3,
                "max_tokens": 512
            },
            "description": "OpenAI 兼容 API 的额外调用参数 (如 temperature, max_tokens, enable_search 等)"
        },
        "ASMGeminiKey": {
            "value": "",
            "description": "Gemini API Key"
        },
        "ASMGeminiModel": {
            "value": "gemini-2.0-flash",
            "description": "Gemini 模型名称"
        },
        "ASMPromptTemplate": {
            "value": "Extract SEO description (max 160 chars) and keywords (comma-separated) from the text. Output JSON only: {\"description\":\"\",\"keywords\":\"\"}. Text: {text}",
            "description": "发送给 AI 的 Prompt 模板"
        }
    },
    "manifest_version": 2
}